<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="TestSuite" parallel="tests">
    <!-- Parallel="false" means tests are run sequentially -->
    <listeners>
        <listener class-name = "testcomponents.Listenners"/>

    </listeners>
    <test name="Error Validation Test">
        <classes>
            <class name="tests.ErrorValidationTest"/>
        </classes>
    </test>

    <test name="Submit Order Test">
        <classes>
            <class name="tests.SubmitOrderTest"/>
        </classes>
    </test>
</suite>